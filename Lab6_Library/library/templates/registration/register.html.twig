{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    {#    header#}
    {{ include('default/header.html.twig') }}
    {#    block-register#}
    <div class="d-flex container container_optimalHeight align-items-center" style="background-image:url('{{ asset('assets/images/3.jpg') }}');">
        <div class="d-flex container-fluid justify-content-center h-70">
            {{ form_start(registrationForm, { 'attr': {'class': 'd-flex flex-column w-50 justify-content-center'} }) }}
            <h1 class="h1 mb-3 font-weight-normal text-center text-light" style="padding-left: 120px;"><span class="logo_red"></span>Регистрация</h1>
            {% set formErrors = registrationForm.vars.errors.form.getErrors(true) %}
            {% if formErrors|length %}
                <div class="alert alert-danger">
                    <label>Исправьте следующие ошибки:</label>
                    <ul>
                        {% for error in formErrors %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <div class="row mb-3 d-flex justify-content-around">
                {{ form_label(registrationForm.email, registrationForm.email, { 'label_attr': {'class': 'text-light text-right label_width'} }) }}
                {{ form_widget(registrationForm.email, { 'attr': {'class': 'input_width form-control'} }) }}
            </div>
            <div class="row mb-3 d-flex justify-content-around">
                {{ form_label(registrationForm.name, registrationForm.name, { 'label_attr': {'class': 'text-light text-right label_width'} }) }}
                {{ form_widget(registrationForm.name, { 'attr': {'class': 'input_width form-control'} }) }}
            </div>
            <div class="row mb-3 d-flex justify-content-around">
                {{ form_label(registrationForm.plainPassword.first, registrationForm.plainPassword.first, { 'label_attr': {'class': 'text-light text-right label_width'} }) }}
                {{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'input_width form-control'} }) }}
            </div>
            <div class="row mb-3 d-flex justify-content-around">
                {{ form_label(registrationForm.plainPassword.second, registrationForm.name, { 'label_attr': {'class': 'text-light text-right label_width'} }) }}
                {{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'input_width form-control'} }) }}
            </div>

            <div class="row justify-content-center mt-3">
                <button type="submit" class="btn btn-lg btn-dark col-6 btn_style" style="margin-left: 160px;">Зарегистрироваться</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
